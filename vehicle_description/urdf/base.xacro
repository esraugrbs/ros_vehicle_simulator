<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!--
    Scaledâ€‘down chassis for nicer proportions in Gazebo.
    Original: 0.95 x 0.85 x 0.47 m  |  New: 0.60 x 0.40 x 0.25 m
  -->
  <xacro:property name="body_length" value="0.60"/>
  <xacro:property name="body_width"  value="0.40"/>
  <xacro:property name="body_height" value="0.25"/>

  <xacro:macro name="base_link">
    <link name="base_link">
      <inertial>
        <mass value="10.0"/>
        <origin xyz="0 0 0"/>
        <!-- simple box inertia approximation -->
        <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
      </inertial>

      <visual>
        <geometry>
          <box size="${body_length} ${body_width} ${body_height}"/>
        </geometry>
        <material name="blue"/>
      </visual>

      <collision>
        <geometry>
          <box size="${body_length} ${body_width} ${body_height}"/>
        </geometry>
      </collision>

      <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
      </gazebo>
    </link>
  </xacro:macro>
</robot>